.lieu-page
    padding: s(50) 0

.lieu
    &__container
        display: flex
        flex-direction: row
        justify-content: space-between
    &__figure
        text-align: center
        width: 50%
    &__text
        width: 45%
        line-height: 1.3
        font-weight 400
        color: $darkGrey
        & p
            padding s(10)
    &__more
        font-size: s(20)
        color: $darkGrey
        line-height: 2
        &--mail
            &:before
                icon('iconMail')
                color: $mediumRed
                margin-right: s(20,20)
        &--tel
            &:before
                icon('iconTel')
                color: $mediumRed
                margin-right: s(20,20)
        &--location
            &:before
                icon('iconLocationSign')
                color: $mediumRed
                margin-right: s(20,20)

@media screen and (max-width 1300px)
    .lieu-page
        padding: s(50) s(20)

@media screen and (max-width 1024px)
    .lieu
        &__container
            flex-direction: column
        &__figure
            width: 100%
        &__text
            width: 100%
            margin-top: s(30)