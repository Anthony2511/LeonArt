.contact
  background-color: $white
  border-radius: 10px
  display flex
  flex-direction: row
  justify-content: space-between
  padding: s(50)
  &__bloc
    width: 45%
  &__required
    color: $mediumRed
    font-size: s(14,16)
    font-weight 500
    display: block
    margin-bottom s(30,14)
  &__champ
    display flex
    flex-direction: column
    margin-bottom: s(30,16)
  &__input
    background-color: $lightGrey
    margin-top: s(10,16)
    padding: s(10,16)
    border-radius: 5px
    border: 1px solid transparent
    transition: .3s ease-in-out
    &:hover
    &:focus
      border 1px solid $mediumRed
      transition: .3s ease-in-out
  &__label
    color: $darkGrey
    font-size: s(16,16)
    font-weight 600
  &__button
    background-color: $darkYellow
    color: $mediumRed
    font-size: s(14,16)
    font-weight: 600
    padding: s(15,14) s(50,14)
    text-transform: uppercase
    border-radius: s(10,14)
    cursor: pointer

.textarea
  resize: none
    