.about
  &__last
    background url('../images/background-edtions.png') no-repeat top center/cover
    background-position: 50% 80%
    position: relative
    padding: s(50,16) 0
    margin-bottom: s(50,16)
    &:before
      content: ''
      position: absolute
      top: 0
      left: 0
      right: 0
      bottom: 0
      width: 100%
      height: 100%
      background-color: alpha($darkGrey,0.9)
      z-index: 10
  &__gallery
    display: flex
    flex-direction: row
    justify-content: space-between
  &__editions-index
    position relative
    z-index 20
  &__editions-text
    color: $white
    line-height: 1.6
    font-size: s(16)
    font-weight 400
    text-align: center
    width: 75%
    margin: 0 auto s(50,16)
  &__numbers
    background: linear-gradient(to top right, $mediumRed, $darkYellow)
    padding: s(50)
    border-radius: 20px
    display: flex
    flex-direction: column
    justify-content center
    align-items: center
    color: $white
    width: 25%
  &__bloc-numbers
    display: flex
    flex-direction: row
    justify-content: space-around
    margin-bottom: s(50,16)
  &__numbers-list
    font-size: s(50,16)
    font-weight 600
  &__numbers-name
    text-transform uppercase
    font-size: s(25,16)
    font-weight 600

@media screen and (max-width 1024px)
  .about
    &__figure-gallery
      padding 0 s(20)

@media screen and (max-width 768px)
  .about
    &__gallery
      flex-direction column
      justify-content: center
      align-items: center
    &__figure-gallery + &__figure-gallery
      padding: 0
      margin-top: s(30)
    &__editions-text
      width: 100%
