.news-page
    padding: s(50) 0
    &__bloc
        display: flex
        flex-direction: row
        justify-content: space-between
        margin-bottom: s(50)
    &__single-bloc
        width: 47.5%
        background-color: $white
        padding: s(20)
        border-radius: 10px
        position relative
    &__title
        color: $mediumRed
        font-size: s(30)
        text-align center
        margin-bottom s(20,30)
        font-weight 600
    &__date
        text-align: center
        display: block
        font-size: s(20)
        font-style: italic
        font-weight: 300
        margin-bottom: s(20)
        color: $darkGrey
    &__text
        & p
            margin-top: s(20)
            margin-bottom: s(75)
            line-height: 1.5
            color: $darkGrey
            font-weight 300
    &__single-link
        position: absolute
        top: 0
        left 0
        right 0
        bottom: 0
        display block
        width: 100%
        height 100%