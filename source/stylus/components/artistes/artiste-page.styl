.artiste-page
  margin: s(100) 0   
  &__bloc
    display: flex
    flex-direction: row
    justify-content: space-between
    margin-bottom: s(50)
  &__infos
    display: flex
    flex-direction: column
    align-items: center
    width: 30%
  &__bio
    width: 60%
    font-size: s(16)
    color: $darkGrey
    line-height: 1.5
    margin-left: s(50)
  &__oeuvres
    width: 60%
  &__title
    background-color: $mediumRed
    color: $darkYellow
    font-family: 'firasans'
    font-weight 600
    font-size: s(30)
    padding: s(20,30) s(40,30)
    max-width  50%
    text-align: center
    border-radius: 5px
    margin-bottom: s(50,30)
  &__bloc-social
    margin-top: s(20)
  &__social
    color: $mediumRed
    font-size: s(40)
    transition: .3s ease-in-out
    & span 
      hidden()
    &--facebook
      &:before
        icon('iconFacebook')
    &--pinterest
      &:before
        icon('iconPinterest')
        margin: 0 s(20,40)
    &--twitter
      &:before
        icon('iconTwitter')
    &:hover
      color: $darkYellow
      transition: .3s ease-in-out
  &__more
    color: $darkGrey
    font-size: s(20)
    line-height: 2    
    &--mail
      &:before
        icon('iconMail')
        color: $mediumRed
        margin-right: s(20,20)
    &--tel
      &:before
        icon('iconTel')
        color: $mediumRed
        margin-right: s(20,20)
  &__gallery-img
    max-width s(200)
    height: s(140)
  &__gallery
    display: flex
    flex-direction: row
    justify-content: space-around


@media screen and (max-width 1300px)
  .artiste-page
    padding: 0 s(20)

@media screen and (max-width 1024px)
  .artiste-page
    &__title
      max-width 75%
    &__bloc-two
      flex-direction: column
    &__infos-two
      width: 100%
    &__oeuvres
      width: 100%
      margin-top: s(30)
    &__gallery
      justify-content: center
      & a
        padding: 0 s(20)
    

@media screen and (max-width 768px)
  .artiste-page
    &__bloc
      flex-direction: column
    &__infos
      width: 100%
    &__bio
      width: 100%
      margin-left: 0
    &__figure
      order: 2
    &__bloc-social
      order: 1
      margin-top: 0
      margin-bottom: s(20)
    &__title
      margin: s(30,30) auto
    &__gallery
      flex-direction: column
      text-align: center
    &__gallery-img
      max-width: 75%
      height: auto
      margin-bottom: s(20)

@media screen and ( max-width 450px )
  .artiste-page
    &__title
      max-width: 100%
      font-size: s(25)


